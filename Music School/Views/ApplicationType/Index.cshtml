@model IEnumerable<Music_School.Models.ApplicationType>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info">
                Application Type Catgory
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Email
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.Password</td>
                        <td width="30%">@obj.Email</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application type exist.</p>
    }
</div>