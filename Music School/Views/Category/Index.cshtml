@model IEnumerable<Music_School.Models.Category>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info">
                Create New Catgory
            </a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th>Password</th>
                    <th> Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.Name</td>
                        <td width="25%">@obj.DisplayOrder</td>
                        <td width="25%">@obj.Password</td>
                        <td width="25%">@obj.Email</td>
                        <td class="text-center">
                            <div class="w-50 btn group" role="group">
                                <a asp-controller="Category" my-2 asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                                <a asp-controller="Category" my-2 asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exist.</p>
    }
</div>